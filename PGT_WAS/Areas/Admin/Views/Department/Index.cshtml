@{
    ViewData["Title"] = "Designation";
}

<h5><i class="bx bi-building"></i> Department</h5>


<div class="text-end pb-3">
    <a asp-action="UpSert" asp-controller="Department" asp-area="Admin" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create Department
    </a>
</div>

<div class="card lh-lg shadow border-0">

    <div class="row">
        <div class="col-sm m-4">

            <div class="pt-2">
                <h6 class="card-title"><i class="bx bi-building"></i> Department List</h6>
                <hr />
            </div>

            <table id="departmentTable"  class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Department name</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>



@section Scripts{
    <script src="~/js/Admin/department.js"></script>
}