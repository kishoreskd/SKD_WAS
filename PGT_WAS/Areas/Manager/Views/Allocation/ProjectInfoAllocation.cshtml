@model ProjectAllocation


@{
    ViewData["Title"] = "Project Info Allocation";
}


<div class="pt-3">
    <div>
        <div class="card border-1">

            <div class="card-header pt-3 pl-3 pb-1">
                <h6 class="f-l pr-1">Allocation</h6>
            </div>

            <div id="cardbody" class="card-body m-1">

                <div class="row">
                    <div class="col-12">
                        <table class="table table-light table-bordered" style="width:100%; height: 100%;">
                            <thead class="table">
                                <tr>
                                    <th width="10%" class="text-left">Allocation Type</th>
                                    <th width="5%" class="text-left">Total Hours</th>
                                    <th width="10%" class="text-left">Start Date</th>
                                    <th width="5%" class="text-left">Schedule Days</th>
                                    <th width="3%" class="text-left">IFA</th>
                                    <th width="3%" class="text-left">IFF</th>
                                    <th width="3%" class="text-left">Checker %</th>
                                    <th width="3%" class="text-left">Modeler %</th>
                                    <th width="3%" class="text-left">Detailer %</th>
                                    <th width="3%" class="text-left">Coordination %</th>
                                </tr>
                            </thead>
                            <tbody class="text-left">
                                <tr>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                    <td><input class="form-control" type="text" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>            
            </div>
        </div>
       
    </div>
</div>