@{
    ViewData["Title"] = "Allocation Sheet";
}


<div class="card lh-lg shadow border-0">
    <div class="m-4">
        <div id="calendar">
        </div>
    </div>
</div>



@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            FullCal();
        });
            

        const FullCal = function () {

            var calendarEl = document.getElementById('calendar');

            $('#calendar').fullCalendar({
                selectable: true,
                editable: true,

                customButtons: {
                    btn_daylist: {
                        text: 'day list',
                        click: function () {
                            var calendar = new FullCalendar.Calendar(calendarEl, {
                                initialView: 'listWeek',
                                events: [
                                    {
                                        title: "Testing1",
                                        description: "This is my description",
                                        start: "2023-08-03",
                                        end: "2023-08-09",
                                        backgroundColor: "#6F4E37",
                                        borderColor: "green",
                                        textColor: "White"
                                    },
                                ],
                            });
                        }
                    },
                    btn_weeklist: {
                        text: 'week list',
                        click: function () {
                            alert('clicked the custom button!');
                        }
                    }
                },

                header: {
                    left: 'prev,next,today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay, btn_daylist,btn_weeklist',
                },
                @*views: {
                    listDay: { buttonText: 'list day' },
                    listWeek: { buttonText: 'list week' },
                    listMonth: { buttonText: 'list month' }
                },

                textColor: "White",*@
                events: function (start, end, timezone, callback) {
                    var events = [];
                    events.push({
                        title: "Testing1",
                        description: "This is my description",
                        start: "2023-08-03",
                        end: "2023-08-09",
                        backgroundColor: "#6F4E37",
                        borderColor: "green",
                        textColor: "White"
                    });

                    callback(events);
                },

                //Each cell render
                dayRender: function (date, cell) {
                    @*cell.css("textColor", "red");*@
                },
                @*defaultView: 'listWeek'*@
            });
        }


    </script>
}
